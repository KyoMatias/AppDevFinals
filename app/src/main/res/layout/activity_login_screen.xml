<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D16B6B"
    android:backgroundTint="#FEBBB6"
    tools:context=".login_screen">

    <ImageView
        android:id="@+id/bg_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/LoginBG" />

    <!-- Username Label -->
    <TextView
        android:id="@+id/username_label"
        android:layout_width="144dp"
        android:layout_height="28dp"
        android:fontFamily="monospace"
        android:lineSpacingExtra="10sp"
        android:text="Username"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#660708"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="305dp" />

    <!-- Password Label -->
    <TextView
        android:id="@+id/password_label"
        android:layout_width="144dp"
        android:layout_height="28dp"
        android:fontFamily="monospace"
        android:lineSpacingExtra="10sp"
        android:text="Password"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#660708"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="375dp" />

    <!-- Username Text Box -->
    <EditText
        android:id="@+id/username_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fadingEdge="horizontal"
        android:inputType="text"
        android:padding="3px"
        android:textColor="#C11919"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="333dp" />

    <!-- Password Text Box -->
    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="4px"
        android:textColor="#AF1D1D"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="403dp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-condensed-light"
        android:lineSpacingExtra="12sp"
        android:text="@string/loginBtn"
        android:textColor="#A02020"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="459dp" />

    <TextView
        android:id="@+id/disclaimer_label"
        android:layout_width="389dp"
        android:layout_height="28dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="0sp"
        android:text="By Creating an account, you agree to ONLYBANDS' terms and conditions. This information can be found at our website"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#660708"
        android:textSize="10sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="677dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="333dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/Redlogo"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="161dp" />


</androidx.constraintlayout.widget.ConstraintLayout>